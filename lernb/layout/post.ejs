<div class="post-wrap">
  <div class="post">
    <div class="m-tit">
      <div class="m-tit-con">
        <h1><%- page.title %></h1>
      </div>
    </div>
    <div class="post-con">
      <!-- S 文章信息 -->
      <div class="p-info-title clearfix">
        <div class="u-img">
          <img src="/img/u.jpg" alt="">
        </div>
        <div class="u-title">
          <div class="uname"><span>ler</span></div>
          <div class="post-date"><span><%- date(page.date, "YYYY-MM-DD") %></span>&nbsp;&nbsp;
            <% if(page.res && page.res != '原创') { %>
            <a id="reslink" href="<%- page.resLink %>" target="_blank" title="来源：<%- page.res %>">

              <span class="res">源</span><span class="res-link"><%- page.res %></span>
            </a>
            <% } else if(page.res == '原创') { %>
            <span
              style="display: inline-block; border-radius:3px; padding: 2px 2px; background-color: #18a0db; height: 12px; line-height: 12px; color: #fff; font-size: 12px;">原创</span>
            <% } %>
          </div>
        </div>
      </div>
      <!-- E 文章信息 -->
      <div class="post-text">
        <%- page.content %>
      </div>
    </div>
    <% if(page.tags) { %>
    <div class="tags clearfix">
      <%- list_tags(page.tags, {
            show_count: false
          }) %>
    </div>
    <% } %>
    <%- js('js/pretty20200908') %>
  </div>
  <!-- 文章底部导航 -->
  <% if (page.prev || page.next){ %>
  <nav id="article-nav" class="clearfix">
    <% if (page.prev){ %>
    <a href="<%- url_for(page.prev.path) %>" id="article-nav-newer" class="article-nav-link-wrap">
      <div class="article-nav-title">
        <strong class="article-nav-caption">&lt;&lt;上一篇</strong>
        <% if (page.prev.title){ %>
        <span class="hoverLine hoverLine-thin"><%= page.prev.title %></span>
        <% } else { %>
        <span>(无标题)</span>
        <% } %>
      </div>
    </a>
    <% } %>
    <% if (page.next){ %>
    <a href="<%- url_for(page.next.path) %>" id="article-nav-older" class="article-nav-link-wrap"
      style="text-align: right;">
      <div class="article-nav-title">
        <span class="hoverLine hoverLine-thin"><%= page.next.title %></span>
        <strong class="article-nav-caption">下一篇&gt;&gt;</strong>
      </div>
    </a>
    <% } %>
  </nav>
  <% } %>
  <!-- 底部文章列表 -->
  <div class="bar">
    <h3>近期文章</h3>
    <div class="bar-item">
      <ul>
        <% site.posts.sort('date', -1).limit(8).each(function(post){ %>
        <!-- <span class="post-date"><%= date(post.date, "YYYY-MM-DD") %></span> -->
        <li class="post-item"><a href="<%- url_for(post.path) %>"><%- post.title %></a></li>
        <% }); %>
      </ul>
    </div>
  </div>
  <!-- 是否开启文章评论 -->
  <% if (theme.showComment && page.comment){ %>
  <script src="/js/valines.js"></script>
  <div id="vcomments"></div>
  <script>
    new Valine({
      el: '#vcomments',
      appId: 'vYpfYM8GB7vEYkshouOCPqfU-9Nh9j0Va',
      appKey: 'W2PWpzkDuwbyUlQqyqUFcgYq',
      placeholder: '说点什么吧~',
      requiredFields: ['nick','mail'],
      recordIP: false,
      avatar: 'retro'
    })
  </script>
  <!-- <div class="comment clearfix" style="margin-top: 35px;">
    <div class="split"></div>
    <section id="isso-thread">
    </section>
  </div> -->
  <% } %>
  <nav id="toTop">TOP</nav>
</div>
<script id="post-js"></script>
